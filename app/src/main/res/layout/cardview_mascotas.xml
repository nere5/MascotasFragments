<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cdvMascotas"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="20dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvMascota"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:src="@drawable/mascota1"
            android:layout_marginTop="10dp"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icLike"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_like" />

        <TextView
            android:hint="Nombre Mascota"
            android:id="@+id/txtNombreMascota"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:hint="4"
            android:id="@+id/txtNumLikes"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:textColor="@color/colorAccent"/>

        <ImageView
            android:id="@+id/icNumLikes"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_num_likes" />

    </LinearLayout>

</androidx.cardview.widget.CardView>